.personal
  display flex
  flex-direction column
  background-color $white
  align-items center
  
  @media $tablet-desktop
    background-image url("../img/bg-personal-explain.jpg")
    background-size cover
    background-position center top
    
  &__block
    display flex
    flex-direction column
    justify-content flex-start
    align-items center

    @media $tablet-desktop
      width 430px
      height 150px
      background-image url("../img/bg-personal-block.png")
      background-size 430px 150px
      background-repeat no-repeat
      
      &--reverse
        justify-content flex-end
        transform scaleY(-1)
        
  &__logo
    padding 30px 0

    @media $tablet-desktop
      transform scaleY(-1)

  &__hgroup
    @media $tablet-desktop
      padding 30px 0

  &__title
  &__fn
    margin auto
    color $tundora
    text-align center
    
    @media $tablet-desktop
      color $white

  &__title
    max-width 900px
    font(2em, 1.2, 700, uppercase)

    @media $desktop
      font(4.5em, 1.2, 700, uppercase)

  &__fn
    max-width 700px
    color $bright-sun
    font(1.5em, 1.2, 700, uppercase)
    
    @media $desktop
      font(1.75em, 1.2, 700, uppercase)
      
  &__text
    color $teal
    font(1.5em, 1.2, 400, uppercase)
    
    &:first-of-type
      margin-top 40px
    
    &--date
      margin-bottom 4px
      color $tundora
      font(2.25em, 1.2, 700, uppercase)