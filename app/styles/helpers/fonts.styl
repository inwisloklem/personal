@font-face
  font-family "Roboto Slab"
  src local("Roboto Slab Regular"), local("RobotoSlab-Regular"), url("../fonts/robotoslabregular.woff2") format("woff2"), url("../fonts/robotoslabregular.woff") format("woff")
  font-weight 400
  font-style normal

@font-face
  font-family "Roboto Slab"
  src local("Roboto Slab Bold"), local("RobotoSlab-Bold"), url("../fonts/robotoslabbold.woff2") format("woff2"), url("../fonts/robotoslabbold.woff") format("woff")
  font-weight 700
  font-style normal

$font = "Roboto Slab", serif

font($size, $height = normal, $weight = 400, $transform = none)
  font-size $size

  if $weight != "400"
    font-weight $weight

  if $height != "normal"
    line-height $height

  if $transform != "none"
    text-transform $transform